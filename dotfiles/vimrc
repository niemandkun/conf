" Vim config file "

" Colorscheme
syntax on
colorscheme default

" Disable beeping and blinking
set noeb vb t_vb=
autocmd GUIEnter * set vb t_vb=

" Editor settings
set ignorecase
set incsearch
set number
set relativenumber

" Indentation settings
set autoindent
set tabstop=4
set shiftwidth=4
set expandtab

" Linebreak setting
set iskeyword=@,48-57,_,192-255
set linebreak
set dy=lastline

" Wildmenu
set wildmenu
set wildmode=list:longest,full

" Remove trailing whitespaces
autocmd BufWritePre * :%s/\s\+$//e

" Jedi configuration
let g:jedi#auto_vim_configuration = 0
let g:jedi#force_py_version = 3
set completeopt=menuone,longest
inoremap <C-c> <Esc>

" Highlight overlength lines
highlight OverLength ctermfg=red guifg=red
match OverLength /\%80v.*/

" Middle mouse button behaviour
set mouse=a
map <S-Insert> <MiddleMouse>
map! <S-Insert> <MiddleMouse>

" Map F2 to save file
imap <F2> <Esc>:w<CR>
map <F2> <Esc>:w<CR>

" Map F3 to update file content
imap <F3> <Esc>:read
map <F3> <Esc>:read

" Map F4 to open new tab
imap <F4> <Esc>:browse tabnew<CR>
map <F4> <Esc>:browse tabnew<CR>

" Map F5 to go to previous tab
imap <F5> <Esc> :tabprev <CR>i
map <F5> :tabprev <CR>

" Map F6 to go to next tab
imap <F6> <Esc> :tabnext <CR>i
map <F6> :tabnext <CR>

" Map F10 to open quit menu
set wildmenu
set wcm=<Tab>
menu Exit.quit     :quit<CR>
menu Exit.quit!    :quit!<CR>
menu Exit.save     :exit<CR>
map <F10> :emenu Exit.<Tab>

" Map F9 to open encoding menu
set wildmenu
set wcm=<Tab>
menu Encoding.koi8-r  :e ++enc=koi8-r<CR>
menu Encoding.cp1251  :e ++enc=cp1251<CR>
menu Encoding.cp1252  :e ++enc=cp1252<CR>
menu Encoding.cp866   :e ++enc=cp866<CR>
menu Encoding.ucs-2le :e ++enc=ucs-2le<CR>
menu Encoding.utf-8   :e ++enc=utf-8<CR>
map <F9> :emenu Encoding.<Tab>
